<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recCardMinuman"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/recImageMinuman"
            android:layout_marginStart="20dp"
            android:padding="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/no_image1"
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded"/>

        <TextView
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:id="@+id/recTitleMinuman"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@id/recImageMinuman"
            android:text="Title"
            android:textColor="@color/MarbleBlue"
            android:textSize="20sp" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:id="@+id/recLangMinuman"
            android:text="Lang"
            android:textColor="@color/MarbleBlue"
            android:textSize="0sp"
            android:textAlignment="center"
            android:layout_toEndOf="@id/recTitleMinuman"
            android:layout_marginTop="20dp"
            android:layout_marginStart="90dp"/>

        <TextView
            android:layout_width="140dp"
            android:layout_height="12dp"
            android:id="@+id/recDescMinuman"
            android:text="Desc"
            android:textColor="@color/MarbleBlue"
            android:textSize="0sp"
            android:layout_toEndOf="@id/recImageMinuman"
            android:layout_below="@id/recTitleMinuman"
            android:maxLines="0"
            android:layout_marginStart="20dp"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>